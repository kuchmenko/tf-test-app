{
  "name": "@repo/db",
  "version": "0.1.0",
  "private": true,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --max-warnings 0",
    "format": "prettier --check \"src/**/*.{ts,tsx,md}\"",
    "format:fix": "prettier --write \"src/**/*.{ts,tsx,md}\"",
    "db:generate": "kysely-codegen --out-file=src/types.ts",
    "migrate:latest": "bun src/migrate.ts",
    "migrate:dev": "bun run migrate:latest && bun run db:generate"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/node": "^22.15.3",
    "@types/pg": "^8.15.6",
    "eslint": "^9.38.0",
    "kysely-codegen": "^0.19.0",
    "typescript": "5.9.2"
  },
  "dependencies": {
    "kysely": "^0.28.8",
    "pg": "^8.16.3"
  }
}
